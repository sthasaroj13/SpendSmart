@{
    ViewData["Title"] = "Create / Edit";
}
@model SpendSmart.Models.Expense
<div class="text-center">
    <h1 class="display-4">Create or edit expense</h1> 

</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Home">
   
    <input hidden type="number"  class=" form-control" placeholder="0" asp-for="Id"/>
    <label class=" mt-4">Value $</label>
    <input type="number" class=" form-control" placeholder="0" asp-for="Value" step="0.01" />
    <label class=" mt-4">Description</label>
    <input type="text" class=" form-control" placeholder="Add a description here.." asp-for="Description" />
    
   <button type="submit" class=" btn btn-primary mt-4">Submit</button>



</form>
